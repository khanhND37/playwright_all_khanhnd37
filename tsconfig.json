{
  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@pages/*": ["src/pages/*"],
      "@sf_pages/*": ["src/pages/storefront/*"],
      "@dashboard_pages/*": ["src/pages/dashboard/*"],
      "@utils/*": ["src/core/utils/*"],
      "@conf/*": ["src/conf/*"],
      "@hive_types/*": ["src/types/hive/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
